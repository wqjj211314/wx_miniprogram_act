<view class="bg-white padding margin-sm margin-top" style="border-radius: 30rpx;">
  <view class="flex" style="justify-content: space-between;align-items: center;font-size: 35rpx;">
    <view class="text-bold">2V2对阵</view>
    <view class="text-blue" bind:tap="sample2v2" style="font-size: 30rpx;">羽毛球计分示例</view>
  </view>
  <view class="margin-top text-grey">
