      </view>
      <view class="cu-item" bindtap="cancel_activity" style="justify-content: center;" wx:if="{{admin_flag && !is_end && activity_info.activity_status < 800 && activity_info.activity_status >= 200}}">
        <text>取消活动</text>
      </view>
