<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}" activityid="{{activity_info.activity_id}}">
  <view slot="content">{{activity_info.title}}</view>
</cu-custom>
<wxs src="/pages/wxmlscript.wxs" module="tools" />
<include src="activityshowinfo_topscrollbar.wxml" />
<swiper style="height:calc(100% - 200rpx);;" current="{{current_swiper_item_index}}" bindchange="swiper_change">
  <!--活动页面-->
  <swiper-item style="width: 100%;height:100%;overflow: auto;">
    <scroll-view scroll-y="true" style="height: 100%;" refresher-enabled="{{true}}" refresher-threshold="{{100}}" refresher-default-style="black" refresher-background="white" refresher-triggered="{{triggered}}" bindrefresherrefresh="onScrollRefresh">
      <!--这个创建活动页面基本完整，UI上正常-->
      <view style="width:100vw;height:25vh;">
        <image class='' wx:if="{{activity_info.bg_img_exist}}" src="{{hosturl}}static/{{activity_info.activity_id}}.jpg" mode="aspectFill" style="width: 100%;height: 100%;"></image>
        <image class='' wx:else src="/default_index_bg.png" mode="aspectFill" style="width: 100%;height: 100%;"></image>
      </view>
      <view class="cu-list menu card-menu" style="margin-top: -140rpx;">
        <view class="cu-item" style="padding-right:5rpx;border-top-right-radius: 20rpx;">
          <view class="content" style="word-break: break-all;">
            <view class="text-black text-lg" style="flex-flow: wrap;margin-bottom: 10rpx;margin-top: 15rpx;font-size: 45rpx;">{{activity_info.title}}</view>
            <view class="flex justify-start" style="flex-flow: wrap;">
              <view class="text-center" style="margin-bottom: 10rpx;margin-right: 10rpx;">
                <button class="cu-btn round bg-yellow" style="padding: 0 20rpx;font-size: 20rpx;height: 40rpx;">{{activity_info.pay_type}}<text style="color: red;">{{activity_info.pay_price==0?"":activity_info.pay_price+"元"}}</text></button>
              </view>
              <view class="text-center" wx:for="{{title_tags}}" style="margin-bottom: 10rpx;margin-right: 10rpx;">
                <button class="cu-btn round bg-yellow" style="padding: 0 20rpx;font-size: 20rpx;height: 40rpx;">{{item}}</button>
              </view>
            </view>
          </view>
          <button class="cu-btn icon bg-white" open-type="share">
            <text class="cuIcon-share text-green" style="font-size: 45rpx;"></text>
          </button>
        </view>
        <view class="cu-item">
          <view class="content" style="flex:0;">
            <text class="cuIcon-timefill text-green"></text>
          </view>
          <view class="action" style="flex:1;">
            <text class="text-blue text-sm">{{activity_info.activity_live}}</text>

          </view>
        </view>
        <view class="cu-item">
          <view class="content">
            <text class="iconfont icon-changguanyuyue text-green" style="display: inline-block;margin-right: 10rpx;width: 1.6em;text-align: center;font-size: inherit;font-style: normal;"></text>

            <text class="text-blue text-sm">{{activity_info.show_activityaddress}}</text>
          </view>
        </view>
        <view class="cu-item arrow" bindtap="showModal" data-target="DialogModal-partinfo">
          <view class="content" style="width:30%;">
            <text class="cuIcon-circlefill text-green"></text>
            <text class="iconfont icon-fl-renminbi lg text-red text-bold" style="font-size: 30rpx;width: fit-content;display:inline-flex" wx:if="{{activity_info.pay_price != 0}}">{{activity_info.pay_price}}
            </text>
            参与{{avatarUrl_list.length+"/"+activity_info.max_part_number}}

          </view>
          <view class="action" style="max-width:70%;">
            <view class="cu-avatar-group">
              <block wx:for="{{avatarUrl_list}}" wx:key="user_id">
                <view class="cu-avatar round sm" style="background-image:url({{item}});"></view>
              </block>

            </view>
          </view>
        </view>

        <view class="cu-item">
          <view class="content">
            <text class="cuIcon-locationfill text-green"></text>

            <text class="text-blue text-sm">{{activity_info.activityaddress}}</text>
          </view>
        </view>
        <view class="cu-item">
          <view class="content">
            <text class="iconfont icon-changdi text-green" style="display: inline-block;margin-right: 10rpx;width: 1.6em;text-align: center;font-size: inherit;font-style: normal;"></text>
            <text class="text-grey">场地</text>
          </view>
          <view class="action" style="max-width:70%;">
            <text class="text-blue text-sm">{{activity_info.room==""?"暂定":activity_info.room}}</text>
          </view>
        </view>

        <view class="cu-item">
          <view class="content">
            <text class="cuIcon-activityfill text-green"></text>
            <text class="text-grey">发起人</text>
          </view>
          <view class="action" style="max-width:70%;" bind:tap="chat_with_creater">
            <view class="cu-avatar round sm" style="background-image:url({{activity_info.createuser.avatarUrl}});margin-right: 8rpx;"></view>
            <text class="text-blue text-sm">{{activity_user_info.nickName}}</text>
          </view>
          <button wx:if="{{admin_flag}}" class="cu-btn lines-red text-xs" style="margin:0px;margin-left:15rpx;padding:10rpx;height: fit-content;width: fit-content;" bindtap="show_info_modal" data-target="Modal_update_activity_info">发布公告</button>

        </view>
        <view class="cu-item">
          <view class="content">
            <text class="cuIcon-infofill text-green"></text>
            <text class="text-grey">报名限制</text>
          </view>
          <view class="action" style="max-width:66%;">
            <text class="text-blue text-sm">{{activity_info.part_limit_dec}}</text>
          </view>
        </view>
        <view class="cu-item">
          <view class="content">
            <text class="cuIcon-remind text-red"></text>
            <text class="text-grey">报名截止</text>
          </view>
          <view class="action" style="max-width:66%;">
            <text class="text-blue text-sm">{{activity_info.addendtimeweek}}</text>
          </view>
        </view>
        <view class="cu-item">
          <view class="content">
            <view class="text-blue text-sm" style="">
              <text>
                <text style="color: red;">最新公告：{{new_announcement==""?"无":"\n"+new_announcement}}
                </text>
              </text>
            </view>
          </view>
        </view>
        
      </view>

      <view class="cu-list menu card-menu margin-top" wx:if="{{partinfo.length > 0}}">
        <view style="text-align: center;" class="bg-white">
          <text class="text-grey text-sm"><text class="cuIcon-remind lg text-red"></text>{{activity_info.cancelendtimeweek}}前可以取消报名</text>
        </view>
        <view class="cu-item" wx:if="{{partinfo.length > 0}}">

          <view class="content">
            <text class="cuIcon-newsfill text-green"></text>
            <text class="text-grey">报名信息</text>
          </view>
          <view class="action" style="max-width:70%;">
            <text class="text-blue text-sm">{{activity_info.partinfo}}</text>
          </view>
        </view>
        <form>
          <block wx:for="{{partinfo}}">
            <view class="cu-form-group">
              <view class="title" style="margin-left:60rpx;" wx:if="{{item!='性别'}}">{{item}}</view>
              <view class="title" style="margin-left:60rpx;" wx:if="{{item=='性别'}}">选择{{item}}</view>
              <view wx:if="{{item=='性别'}}">
                <view class="cu-tag round {{partinfo_sex=='0'?'bg-pink':''}}" style="width: 80rpx;height:50rpx" bind:tap="choosesex" data-sex="0">女
                  <text class="cuIcon-female">
                  </text>
                </view>
                <view class="cu-tag round {{partinfo_sex=='1'?'bg-blue':''}}" style="width: 80rpx;height:50rpx;margin-left:40rpx;" bind:tap="choosesex" data-sex="1">男
                  <text class="cuIcon-male">
                  </text>
                </view>
              </view>
              <input wx:if="{{item != '自评等级' && item != '性别'}}" maxlength="10" placeholder="请填写" bindinput='partinfoInput' data-value="{{item}}"></input>
              <picker wx:if="{{item == '自评等级'}}" bindchange="PickerChange" value="0" range="{{picker}}">
                <view class="picker">
                  {{picker[picker_index]}}
                </view>
              </picker>
            </view>
          </block>
        </form>
        <view class="cu-item" wx:if="{{activity_info.group_tag_dict_notempty}}" style="flex-direction: column;align-items: flex-start;">
          <view class="content">
            <text class="iconfont icon-fenzu text-green" style="display: inline-block;margin-right: 10rpx;width: 1.6em;text-align: center;font-size: inherit;font-style: normal;"></text>
            <text class="text-grey">报名预分组</text>
          </view>
        </view>
        <radio-group style="width: 100%;" bindchange="listenRadioChange">
          <form>
            <block wx:for="{{activity_info.group_tag_dict}}">
              <view class="cu-form-group">
                <view class="title flex" style="margin-left:60rpx;align-items: center;">
                  <radio value="{{index}}" style="zoom:80%;margin-right:20rpx;" />{{index}}({{all_group_tag_dict[index].length == undefined?"0":all_group_tag_dict[index].length}}/{{activity_info.group_tag_dict[index]["limit"]}})
                </view>
                <view class="title" style="margin-left:60rpx;">场地:{{activity_info.group_tag_dict[index]["room"]}}</view>

              </view>
            </block>

          </form>
        </radio-group>
      </view>
      <view class="cu-list menu card-menu" wx:if="{{activity_info.detail.length>0}}" style="margin-top: 0rpx;">
        <view style="text-align: center;" class="bg-white">
          <text class="text-grey text-sm"><text class="cuIcon-form lg text-green"></text>活动详情</text>
        </view>
        <view class="cu-item">
          <view class="content">
            <view class="text-grey text-sm" style="">
              <text>{{activity_info.detail}}
              </text>
            </view>
          </view>
        </view>
      </view>
      <view style="height: 200rpx;"></view>

    </scroll-view>

  </swiper-item>
  <!--分组，提供分组功能，对阵选项，踢出成员选项-->
  <swiper-item style="width: 100%;">

    <include src="activityshowinfo_group.wxml" />
  </swiper-item>
  <!--排名页面，提供胜率展示和点赞-->
  <swiper-item style="width: 100%;height:100%;">
    <include src="activityshowinfo_data.wxml" />
  </swiper-item>
</swiper>

<!--底部导航栏-->
<!--未结束wx:if="!is_end"要显示-->
<view class="flex bg-white" style="padding:20rpx 20rpx;width: 100%; margin-bottom: 0rpx;position: fixed;bottom: 0rpx;justify-content: space-around;font-size: 30rpx;height: 110rpx;padding-top:15rpx;" wx:if="{{!is_end}}">

  <!--父组件已经判断：未结束-->
  <!--已报名，未开始，取消未截止hidden=is_cancelend，要显示-->
  <view class="" style="flex:1;margin-right: 10rpx;" bindtap="cancel_part" wx:if="{{login_user_part_list.length > 0}}" hidden="{{is_cancelend}}">
    <button class="cu-btn bg-red round" style="width: 100%;height: 85rpx;" bindtap="cancel_part" disabled="{{is_begin}}">取消报名</button>
  </view>
  <!--父组件已经判断：未结束-->
  <!--未截止wx:if="{{!is_addend}}"，要显示-->
  <view class="" style="flex:1;margin-right: 10rpx;" bindtap="part_activity" wx:if="{{!is_addend}}">
    <!--disable_flag是防止误触重复报名的，报名完就恢复-->
    <button class="cu-btn bg-green round" style="width: 100%;height: 85rpx;">报名</button>
  </view>
  <!--父组件已经判断：已开始未结束-->
  <!--已报名，要显示-->
  <view class="" style="flex:1;margin-right: 10rpx;" bindtap="recore_mood" wx:if="{{login_user_part_list.length > 0}}">
    <!--disable_flag是防止误触重复报名的，报名完就恢复-->
    <button class="cu-btn bg-green round" style="width: 100%;height: 85rpx;">记录见闻</button>
  </view>
</view>
<!--取消报名的弹框选择，针对重复报名的成员-->
<view class="cu-modal {{modalName=='Modal_cancel_part'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">取消报名</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="{{modalName=='Modal_cancel_part'?'show':''}}">
      <scroll-view scroll-x="false" scroll-y="true" style="height: 500rpx;">
        <checkbox-group bindchange="listenCheckboxChange">
          <block wx:for="{{login_user_part_list}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="cu-list menu-avatar" style="margin:0rpx;">
              <view class="cu-item">
                <view style="position: absolute;left: 10rpx;">{{tools.show_member_num(item.member_num)}}号</view>
                <view class="cu-avatar round lg" style="left:70rpx;background-image:url({{item.avatarUrl}});"></view>
                <view class="content" style="left: 170rpx;">
                  <view class="text-grey">{{item.nickName}}</view>
                  <view class="text-black flex" style="font-size: 20rpx;">
                    <view class="text-cut">
                      <view class="flex">
                        <text class="cuIcon-tagfill text-red  margin-right-xs"></text>
                        <block wx:for="{{item.partinfo}}" wx:for-index="key" wx:for-item="value">{{key}}:{{value}}<text style="color: red;">|</text>
                        </block>
                      </view>
                    </view>
                  </view>
                </view>

                <view class="action">
                  <checkbox value="{{item.member_num}}" />
                </view>
              </view>
            </view>
          </block>

        </checkbox-group>
      </scroll-view>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn bg-green margin-left" bindtap="confirm_cancel_part">确认</button>
      </view>
    </view>
  </view>
</view>
<view class="cu-modal {{modalName=='DialogModal-partinfo'?'show':''}}" style="padding:0px;">
  <view class="cu-dialog" style="width: fit-content;max-width: 680rpx;">
    <view class="cu-bar bg-white justify-end">
      <view class="content text-bold" style="font-size: 30rpx;color: #070707;">报名(限{{activity_info.max_part_number}}名)</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="">
      <view class="su-table-box">
        <view class="su-table">
          <!-- 表格标题 -->
          <view class="su-tr">
            <view class="su-th text-bold">
              序号
            </view>
            <block wx:if="{{checking_flag}}">
              <view class="su-th text-bold">
                审核
              </view>
            </block>
            <view class="su-th text-bold" wx:for="{{partinfo_keys}}" wx:for-item="item">{{item}}</view>
          </view>
          <!-- 表格内容 -->
          <view class="su-tr" wx:for="{{partinfo_values}}" wx:for-item="item" wx:for-index="index1">
            <view class="su-td">
              {{index1+1>activity_info.max_part_number?"排队中":index1+1}}
            </view>

            <view class="su-td" wx:for="{{item}}" wx:for-item="info" wx:for-index="index">
              <block wx:if="{{index==0}}">
                <view class="cu-avatar round sm" style="background-image:url({{info}});" data-index="{{index1}}">
                </view>
              </block>
              <block wx:else>
                {{info}}
              </block>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="cu-modal {{modalName=='Modal_update_activity_info'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">发布公告</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="{{modalName=='Modal_update_activity_info'?'show':''}}">
      <view class="cu-form-group solid" style="margin: 10rpx;">
        <textarea placeholder="填写最新公告..." maxlength="800" bindinput='detailInput' style="max-height:10em;min-height:5em;text-align: left;"></textarea>
      </view>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn bg-green margin-left" bindtap="update_activity_announcement">发布</button>
      </view>
    </view>
  </view>
</view>