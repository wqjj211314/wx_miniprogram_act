/* pages/userability/ability.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
@import "/colorui/iconfont.wxss";
.new_swiper {
  width: 710rpx;
  position: absolute;
  top: -10rpx;
  z-index: 66;
  left: 40rpx;
}

.new_swiper swiper-view {
  vertical-align: middle;
}

.box_item {
  display: inline-block;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 23rpx;
  box-sizing: border-box;
  padding: 0 16rpx 0;
  font-size: 25rpx;
  color: rgba(255, 255, 255, 0.9);
  position: absolute;
  bottom: 0;
}

.customer-msg-cu-btn {
  display: inline-flex;
  align-items: left;
  justify-content: left;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  font-size: 30rpx;
  line-height: 160%;
  text-decoration: none;
  overflow: visible;
  border-radius: 25rpx;
  margin:10px 10px;
  max-width: 70%;
  min-width: 0rpx;
  overflow: hidden;
}
.bg-touming{
  background-color: rgba(51,51,51,0.3);
  color:white;
  font-weight: normal;

}