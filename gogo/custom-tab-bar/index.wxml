<!--miniprogram/custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab" style="padding:9rpx 102rpx 20rpx;">
    <image src="{{selected == index ? item.selectedIconPath : item.iconPath}}" style="{{index==1?'width:80rpx;height:80rpx;':''}}"></image>
    <view style="color: {{selected == index ? selectedColor : color}}">{{item.text}}</view>
  </view>
</view>
